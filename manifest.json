{
  "name": "Udacity Inline Forums",
  "version": "0.1",
  "manifest_version": 2,
  "description": "Displays threads from the forum in context of Udacity lesson pages.",
  "permissions": [
      "http://forums.udacity.com/*"
  ],
  "content_scripts": [
    {
      "matches": ["*://www.udacity.com/view*"],
      "js": ["comments.js"],
      "css": ["comments.css"]
    }
  ]
}
